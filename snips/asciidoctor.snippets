global !p
def capitalise(s, remove=None):
	cap = True

	for i in range(len(s)):
		if s[i].isalpha():
			if cap:
				s = s[:i] + s[i].upper() + s[i+1:]
			cap = False
		else:
			cap = True

	if remove is not None:
		s = remove.sub('', s)

	return s
endglobal

