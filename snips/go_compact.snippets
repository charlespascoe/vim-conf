# KEEP IN ALPHABETIC ORDER

global !p
def find_method_type():
	l = vim.current.window.cursor[0] - 1

	struct = re.compile(r"^type (\w+) struct")
	method = re.compile(r"^func \(([^)]+)\)\s+\w+\(")

	name = ''

	while l >= 0:
		line = vim.current.window.buffer[l]

		match = method.match(line)

		if match:
			return match[1]

		match = struct.match(line)

		if match:
			name = match[1]
			return (name[0] + re.sub('[a-z]', '', name[1:])).lower() + ' ' + name

		l -= 1

def find_type():
	l = vim.current.window.cursor[0] - 1

	struct = re.compile(r"^type (\w+) struct")

	name = ''

	while l >= 0:
		line = vim.current.window.buffer[l]

		match = struct.match(line)

		if match:
			return match[1]

		l -= 1
endglobal

